    <div class="flex flex-col lg:flex-row items-center">
        <div class="lg:w-3/5">
            <div class="text-center lg:text-left text-text">
                <div class="mb-4 uppercase">
                    <i class="fa-solid fa-code mx-2"></i>Programming
                    <i class="fa-regular fa-circle fa-sm ml-4 mr-2"></i>
                    <i class="fa-solid fa-code mx-2"></i>Development
                </div>
                <div class="text-2xl leading-relaxed">Empowering your business to</div>
                <h1 class="text-4xl lg:text-6xl font-bold my-5"><span class="inline-block text-title">Thrive online and grow rapidly</span></h1>
                <div class="gap-3 flex justify-center lg:justify-start mb-3">
                    <a href="{{ asset('assets/pdf/cv_eng.pdf') }}" download target="_blank">{{ component('button', {text: 'Resume' , icon : 'fa-solid fa-download'}) }}</a>
