{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<div class="container mx-auto px-5">
    <div class="container m-auto grid grid-cols-1 md:grid-cols-2 gap-4 justify-center">
        {% for article in articles %}
        <div class="flex flex-col justify-between p-4 bg-white border border-gray-200 rounded-lg shadow dark:border-gray-700 dark:bg-gray-800">
            <a href="{{ path('app_article_view', {id : article.id}) }}">
                <div class="flex flex justify-between p-4 leading-normal">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 -translate-y-full hover:transition hover:underline dark:text-white">{{ article.title }}</h5>
                </div>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ article.description }}</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
